{% extends 'template.twig' %}
{% block body %}
    <h2 class="text-center">Panneau d'administration</h2>
    <h5 class="text-center">Liste des commentaires</h5>
    <table class="text-center table-striped table-borderless table-responsive table w-100 d-block d-sm-table d-md-table">
        <thead class="thead-dark">
        <tr>
            <th>Auteur</th>
            <th>Date</th>
            <th>Commentaire</th>
            <th>Action</th>
        </tr>  
        </thead>
        {% for comment in listComments %}
            <tr class="recipe">
                <td>{{ comment.nickname }}</td>
                <td>{{ comment.date }}</td>
                <td>{{ comment.content }}</td>
                <td class="btn-group" role="group" aria-label="actions">
                    <button data-id="{{ comment.commentId }}" class="delete-comment btn btn-danger">Effacer</button>
                </td>
            </tr>
        {% endfor %}
    </table>
    <p><a href="{{ baseUrl }}/admin" class="btn btn-secondary p-1"><i class="fas fa-arrow-circle-left"></i> Retour</a></p>
{% endblock %}
{% block scripts %}
    <script src="{{ baseUrl }}/app/public/js/AdminPanel.js"></script>
    <script src="{{ baseUrl }}/app/public/js/admin.js"></script>
{% endblock %}